# Server Configuration
PORT=8000
NODE_ENV=development
LOG_LEVEL=info

# Supabase Configuration (Required for direct database access)
SUPABASE_URL=your-supabase-project-url
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# JWT Configuration
JWT_SECRET=your-jwt-secret-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Coinbase Developer Platform (for x402 integration and embedded wallets)
CDP_API_KEY_ID=your-api-key-id
CDP_API_KEY_NAME=your-api-key-name
CDP_API_KEY_SECRET=your-api-key-secret-private-key
CDP_WALLET_SECRET=your-wallet-secret
CDP_NETWORK=base-sepolia
CDP_PROJECT_ID=xxxx

# Authentication Domain (for wallet auth message signing)
AUTH_DOMAIN=localhost:8000

# Anthropic Claude Configuration (for LLM parsing with Claude Sonnet 4)
ANTHROPIC_API_KEY=xxx
# Note: claude-sonnet-4-20250514 is hardcoded in the service, no ANTHROPIC_MODEL needed

# x402 Configuration (fallback if Claude not configured)
X402_FACILITATOR_URL=https://x402.org/facilitator
X402_BAZAAR_URL=https://bazaar.x402.org

